<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="11dp"
    android:paddingRight="11dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/al_zamalek"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:textSize="25sp" />

    <ImageView
        android:layout_width="111dp"
        android:layout_height="131dp"
        android:contentDescription="@string/zamalek_img"
        android:src="@drawable/zamalek_logo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/z_goals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="31dp"
            android:text="@string/_0"
            android:textColor="@android:color/black"
            android:textSize="55sp"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/z_fouls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/z_0"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="30sp" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="setzGoals"
        android:text="@string/goal"
        android:textSize="21sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/foul"
        android:textColor="@android:color/holo_red_dark"
        android:onClick="setzFouls"/>

</LinearLayout>