<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:http="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/gradients">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/learn_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:paddingBottom="13dp"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:paddingTop="13dp"
            android:text="@string/company_x"
            android:textAlignment="center"
            android:textSize="31sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="386dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/logo"
            android:scaleType="fitCenter"
            android:src="@drawable/cx_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="11dp"
            android:text="@string/intro"
            android:textColor="@android:color/black"
            android:textSize="21sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="11dp"
            android:fontFamily="cursive"
            android:text="@string/under_intro"
            android:textColor="@android:color/black"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="17dp"
            android:text="@string/for_more_info"
            android:textAlignment="viewStart" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="phone"
            android:clickable="true"
            android:focusable="true"
            android:paddingStart="21dp"
            android:text="@string/_12_3456789"
            android:textColor="@android:color/black"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="email"
            android:paddingStart="21dp"
            android:text="@string/mustafaj4m_gmail_com"
            android:textColor="@android:color/black"
            tools:ignore="RtlSymmetry" />
    </LinearLayout>
</ScrollView>
